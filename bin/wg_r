#!/usr/bin/env ruby

require 'wg'
require 'optparse'

options = {}

OptionParser.new do |parser|
  parser.on("-n", "--name NAME", "The name of the person to greet.") do |v|
    options[:name] = v
  end

  parser.on("-h", "--help", "Prints this help dialog.") do
    puts parser
    exit
  end
end.parse!

puts "!./lib"  if options[:name]
